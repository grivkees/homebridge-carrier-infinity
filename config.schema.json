{
  "pluginAlias": "CarrierInfinity",
  "pluginType": "platform",
  "singular": true,
  "schema": {
    "type": "object",
    "properties": {
      "username": {
        "title": "Username",
        "type": "string",
        "required": true,
        "default": ""
      },
      "password": {
        "title": "Password",
        "type": "string",
        "required": true,
        "default": ""
      },
      "holdBehavior": {
        "title": "Hold Behavior",
        "description": "How long temperature setpoint changes made via homekit persist. If you use activity schedules, this will make sure those eventually resume.",
        "type": "string",
        "default": "forever",
        "oneOf": [
          { "title": "Until Next Scheduled Activity", "enum": ["activity"] },
          { "title": "For X Hours", "enum": ["for_x"] },
          { "title": "Until Time X", "enum": ["until_x"] },
          { "title": "Indefinitely", "enum": ["forever"] }
        ],
        "required": true
      },
      "holdArgument": {
        "title": "Hold Argument X",
        "description": "Only for 'For X Hours' or 'Until Time X'.",
        "type": "string",
        "placeholder": "HH:MM",
        "pattern": "^[0-2][0-9]:[0-5][0-9]$"
      }
    }
  }
}